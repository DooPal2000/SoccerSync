<% layout('layouts/boilerplate') %>

<div class="container">
    <h1>All Posts</h1>
    <div class="mb-3">
        <a href="/post/new" class="btn btn-primary">Add New Post</a>
    </div>

    <% if (!postings || postings.length === 0) { %> 
        <!-- postings 배열이 없거나, 길이가 0일 경우 -->
        <div class="alert alert-warning mt-4">
            <p>No posts available yet. Be the first to add one!</p>
            <a href="/post/new" class="btn btn-success">Add New Post</a>
        </div>
    <% } else { %> 
        <!-- postings가 있을 때만 게시글 목록 출력 -->
        <% for (let post of postings) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (post.image) { %>
                            <img class="img-fluid" alt="<%= post.title %>" src="<%= post.image %>">
                        <% } else { %>
                            <img class="img-fluid" alt="No image available" src="/path/to/default-image.jpg">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= post.title %></h5>
                            <p class="card-text"><%= post.description.substring(0, 100) %>...</p>
                            <p class="card-text">
                                <small class="text-muted"><%= post.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/posts/<%= post._id %>">View Post</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    <% } %>
</div>
