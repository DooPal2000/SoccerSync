<% layout('layouts/boilerplate')%>


  <div class="container">
    <h1> 승부예측 + 배당률 </h1>
    <div class="card border-danger mt-3" style="max-width: 18rem;">
      <div class="card-header">승부예측</div>
      <div class="card-body text-danger">
        <h5 class="card-title">베팅 추천: <%=predictionsData.predictions.advice %>
        </h5>
        <p class="card-text">
          홈팀 승리 확률: <%=predictionsData.predictions.percent.home %> <br>
            무승부 확률: <%=predictionsData.predictions.percent.draw %> <br>
              원정팀 승리 확률: <%=predictionsData.predictions.percent.away %>
        </p>
      </div>
    </div>
    <!-- prediction.ejs -->

    <div class="row mt-3">
      <div class="card col-auto mb-3">
        <img src="<%= predictionsData.teams.home.logo %>" class="card-img-top"
          alt="<%= predictionsData.teams.home.name %>" width="100"
          height="100">
        <div class="card-body">
          <h5 class="card-title">
            <%= predictionsData.teams.home.name %>
          </h5>
          <p class="card-text">최근5경기 : <%= predictionsData.teams.home.league.form.slice(-5) %>
          </p>
        </div>
      </div>
      <div class="card col-auto mb-3">
        <img src="<%= predictionsData.teams.away.logo %>" class="card-img-top"
          alt="<%= predictionsData.teams.away.name %>" width="100"
          height="100">
        <div class="card-body">
          <h5 class="card-title">
            <%= predictionsData.teams.away.name %>
          </h5>
          <p class="card-text">최근5경기 : <%= predictionsData.teams.away.league.form.slice(-5) %>
          </p>
        </div>
      </div>
    </div>






  </div>